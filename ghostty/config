keybind = shift+enter=text:\x1b\r
keybind = alt+tab=toggle_visibility
font-family = "JetBrainsMono Nerd Font Mono"

# Catppuccin Mocha theme
theme = "catppuccin-mocha.conf"

# Terminal padding
window-padding-x = 16
window-padding-y = 16

shell-integration = zsh
macos-titlebar-style = tabs

# Disable opacity on unfocused splits
unfocused-split-opacity = 1.0

# Background transparency and blur
background-opacity = 0.9
background-blur-radius = 20
# Auto-update Ghostty when a new release is available.
auto-update = download
# gpg pinentry freaks out if $TERM is not set
term = xterm-256color

macos-option-as-alt = left
keybind = alt+left=unbind
keybind = alt+right=unbind
